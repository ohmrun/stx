{
  "build" : {
    "-lib" : ["stx","queues-core","rabbitmq"],
    "unit" : {
      "--times" : true,
      "--macro" : ["include('stx',true)","include('eu.ohmrun',true)"],
      "hl" : {
        "--hl" : "dist/hl/unit.hl"
      },
      "cpp" : {
        "--cpp" : "dist/unit/cpp"
      },
      "php" : {
        "--php" : "build/php"
      },
      "python" : {
        "--python" : "dist/unit/python/stx.py"
      },
      "javascript" : {
        "--macro" : "exclude('stx.asys')",
        "--js"    : "dist/javascript/unit/main.js"
      },
      "neko" : {
        "--neko" : "dist/neko/main.n"
      },
      "lua" : {
        "--lua" : "dist/lua/main.lua"
      },
      "interp" : {
        "--interp" : true 
      }
    },
    "test" : {
      "-main" : "Test",
      "interp" : {
        "--interp" : "true"
      },
      "cpp"  : {
        "--cpp" : "dist/test/cpp"
      },
      "php"  : {
        "--php" : "dist/test/php/main.php"
      },
      "python"  : {
        "--python" : "dist/test/python/main.py"
      },
      "neko" :  {
        "--neko" : "dist/test/neko/main.n"
      },
      "hl" :  {
        "--hl" : "dist/test/hl/main.hl"
      },
      "jvm" :  {
        "--jvm" : "dist/test/jvm/"
      },
      "lua" :  {
        "--lua" : "dist/test/lua/main.lua"
      }
    },
    "docs" : {
      "--lua" : [
        "include('stx',true,['stx.makro','tink','hre','equals','hscript','httpstatus'])"
      ],
      "-lib" : "stx",
      "-D"   :  "doc-gen",
      "-xml" :  "docs/doc.xml" 
    }
  },
  "run" : {
    "docs" : [
      ["hx","build","docs"],
      ["hx","run","dox"]
    ],
    "dox"  : [
      [
        "haxelib","run","dox",
        "-i","docs",
        "-o","../ohmrun.github.io/",
        "-ex", "bake",
        "-ex", "bootstrap*",
        "-ex", "haxe",
        "-ex", "hx",
        "-ex", "tink.*",
        "-ex", "hre.*",
        "-ex", "equals.*",
        "-ex", "hscript*",
        "-ex", "httpstatus",
        "-in", "stx.*",
        "-in", "eu.*"
      ]
    ],
    "serve" : [
      ["nekotools","server","-d","../ohmrun.github.io/","-rewrite"]
    ]
  }
}